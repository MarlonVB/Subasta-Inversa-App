<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.ActivityRecuperaC">

    <TextView
            android:text="Recuperacion de Contraseña"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="115dp"
            android:layout_marginEnd="116dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="65dp"
            style="@style/Widget.AppCompat.TextView.SpinnerItem" app:fontFamily="sans-serif-black"
            app:guidelineUseRtl="false" app:layout_wrapBehaviorInParent="included"
            app:layout_constraintHorizontal_bias="0.5"/>
    <TextView
            android:text="Ingrese su correo"
            android:layout_width="150dp"
            android:layout_height="21dp" android:id="@+id/textView3"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="150dp"
            android:layout_marginEnd="128dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="72dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintHorizontal_bias="1.0"
            style="@style/Widget.AppCompat.TextView.SpinnerItem"
            app:fontFamily="sans-serif-condensed"/>
    <Button
            android:text="Enviar Código"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn_enviar_codigo"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="134dp"
            android:layout_marginEnd="125dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/txtEmail"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/txtEmail"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="108dp"
            android:layout_marginEnd="93dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"/>
    <TextView
            android:text="Ingrese su código"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView6"
            style="@style/Widget.AppCompat.TextView.SpinnerItem" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="141dp" android:layout_marginEnd="128dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="79dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_enviar_codigo"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtCodigo"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="108dp"
            android:layout_marginEnd="93dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="1dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6"/>
    <Button
            android:text="Validar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnValidar"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="163dp"
            android:layout_marginEnd="150dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="53dp"
            app:layout_constraintTop_toBottomOf="@+id/txtCodigo"/>
</androidx.constraintlayout.widget.ConstraintLayout>