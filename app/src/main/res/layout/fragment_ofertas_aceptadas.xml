<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:text="@string/pantalla_ofertas_aceptadas"
            android:layout_width="123dp"
            android:layout_height="25dp" app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/ofertasAceptadas" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="1.0"
            android:layout_marginBottom="45dp" app:layout_constraintBottom_toTopOf="@+id/listaOferAceptadas"/>
    <View
            android:id="@+id/divider6"
            android:layout_width="430dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ofertasAceptadas" android:layout_marginTop="12dp"
            app:layout_constraintHorizontal_bias="0.216" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/listaOferAceptadas"/>

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="373dp"
            android:layout_height="578dp"
            android:id="@+id/listaOferAceptadas"
            android:divider="@color/darkGrey"
            android:listSelector="@color/clearBlue"
            tools:listitem="@layout/item_ofertas_aceptadas"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.802"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>